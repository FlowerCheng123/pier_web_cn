<%include ../header%>
<div class="container" >
    <div class="auth-fence">
		<div class="title">
			<p>设置密码成功</p>
    	</div>
    	<div class="auth-form text-center">
	        <h4 style="margin-top:140px;line-height:34px;">设置密码成功，<br><span style="font-size:24px; color:#7b37a6;" id="timerHander"></span>s中为您跳转到<a href="/merchants/login" style="color:#7b37a6;">登录页面</a></h4>
    	</div>
    </div>
</div>
<script type="text/javascript">
	(function(){
		var timerClock = 5;
		var _timerHander = document.getElementById('timerHander');
        var timer = function(){
        	_timerHander.innerHTML = timerClock;
        	if( timerClock == 0 ){
        		window.location.href="/merchants/login";
        		return;
        	}
        	timerClock -= 1;

        	return setTimeout(timer, 1000);
        }
        timer();
	})()
</script>
