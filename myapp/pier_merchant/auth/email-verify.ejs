<%include ../header%>
<div class="container" ng-app="RegisterApp" ng-controller="ResendController">
    <div class="auth-fence">
		<div class="title">
			<p>企业版注册</p>
    	</div>
    	<div class="auth-form">
			<div class="register-process">
				<div style="width:100%;height:2px;background:#fff;"></div>
			    <div style="width:100%;height:1px;background:rgb(200,200,200);"></div>
			    <div class="process1 process active">
			        <div class="circle ">1</div> 
			        <p>基本信息</p>
			    </div>
			    <div class="process2 process active">
			        <div class="circle ">2</div> 
			        <p>邮箱激活</p>
			    </div>
			</div>
	    	<form class="register-form">
	    	    <div class="container-fluid text-center">
		    	    <div class="row">
		    	    	<div class="col-md-8 col-md-offset-2">
			    	    	<img src="../images/merchant-email.png" style="margin-top:90px;"/>
			    	    	<h4 style="margin-top:30px;">请激活您的账户</h4>
			    	    	<p style="margin-top:40px;padding-left:30px;padding-right:30px;">激活邮件已发送至您<a href="mailto:<%=email%>" style="color:#7b37a6;"><%=email%></a>邮箱，请前往您的邮箱，点击邮件中的链接激活您的账户后继续使用。</p>
			    	    	<button ng-click="resend()" ng-disabled="sendFlag" ng-show="hasResendEmail" ng-cloak>没有收到邮件，从新发送&nbsp;&nbsp;<i class="fa fa-gear fa-spin" ng-show="sendFlag" ></i></button>
		    	    	</div>
		    	    </div>
	    	    </div>
	    	</form>
    	</div>
    </div>
</div>
<script src="../pier_merchant/js/register.js"></script>
<%include ../footer-2%>